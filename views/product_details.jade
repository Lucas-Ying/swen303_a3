                                                                span(style = "color:RED;") &nbsp &nbsp &nbsp &nbsp &nbsp This item is sold out.
                                                            if numItems >= 1 & numItems <= 3
                                                                span Product Sku: #{numItems}
                                                                    span#sku
                                                                span(style = "color:RED;") &nbsp &nbsp &nbsp &nbsp &nbsp Only #{numItems} remaining!
                                                            if numItems > 3
                                                                span Product Sku: #{numItems}
                                                                span#sku
                                                        li
                                                            span Categories:
                                                            |                       #{categories}
                                                .share-links.social-sharing
                                                    ul.list-inline
                                                        li
                                                            a(target='_blank', href='//www.facebook.com/sharer.php?u=http://goshop/product_details/' + id, title='Facebook')
                                                                i.fa.fa-facebook
                                                        li
                                                            a(target='_blank', href='//twitter.com/share?url=http://goshop/product_details/' + id, title='Twitter')
                                                                i.fa.fa-twitter
