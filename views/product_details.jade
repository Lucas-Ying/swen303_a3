                                .product-simple-tab
                                    div(role='tabpanel')
                                        // Nav tabs
                                        ul.nav.nav-tabs(role='tablist')
                                            li.active(role='presentation')
                                                a(href='#tab_detail', aria-controls='tab_detail', role='tab', data-toggle='tab') Description
                                            li(role='presentation')
                                                a(href='#tab_sc', aria-controls='tab_sc', role='tab', data-toggle='tab') Shipping & Return
                                        // Tab panes
                                        .tab-content
                                            #tab_detail.tab-pane.active(role='tabpanel')
                                                p
