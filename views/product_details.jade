                                                        span.price-sale
                                                            -var discountPrice = parseFloat(price*0.9).toFixed(2);
                                                            span.money() $#{discountPrice}
                                                .short-description
                                                    | #{desc}
                                                -var wishlistClick = "window.location='/product_details/" + id + "'"
                                                button.btn.add-to-wishlist(type='button', onclick=wishlistClick, title='Add to wishlist')
