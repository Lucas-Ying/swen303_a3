extends layout

block header
    include header

block content
    #body-content
        .container
            .row
                // sidebar
                include sidebar
                // main content
                #main-content.col-md-9
                    .container
                        h2 Sign Up

                            form#loginForm.valForm(action='', method='GET')

                                label(for='email') Email:
                                input#email(name='email', type='email')

                                label(for='password') Password:
                                input#password(name='password', type='password')

                                label#err.errs

                                button.btn.btn-default(type='submit', value='Log in')